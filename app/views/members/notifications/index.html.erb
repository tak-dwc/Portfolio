<div class="container mt-5">
  <% if @notifications.exists? %>
  <div class="row justify-content-center">
    <div class="col-7">
      <%= link_to destroy_all_notifications_path, method: :delete, class: "text-right" do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7 class="text-dark">全削除</h7>
      <% end %>    
      <%= render @notifications %>
    </div>
  </div>  
  <% else %>
  <div class="row justify-content-center">
    <div class="col-5 ">
      <h4>通知はありません</h4>
    </div>
  </div>
  <% end %>
    <div class=" row justify-content-center mt-3 mb-2"><%= paginate @notifications %></div>
</div>