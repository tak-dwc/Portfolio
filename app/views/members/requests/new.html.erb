<%= form_with model:@request,local:true do |f| %>
<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-2">
     <h5>投稿作成</h5>
    </div> 
    <div class="offset-7"></div>
    <div class="col-3 justify-content-end">
       <input type="submit" value="&#xf064; 投稿" class="fas fa-share　btn btn-lg btn-warning  btn-block">
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title ,class:"form-control" %>
      </div>
      <div class="form-group ">
        <%= f.label :予定日 %>
        <%= f.date_field :schedule ,class:"form-control" %>
      </div>
      <div class="form-group ">
        <%= f.label :予定場所 %>
        <%=f.text_field :location ,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :タグ %>
        <%= f.text_field :caption, class:"form-control"%>
        <small class="form-text text-muted">※1つずつに#(ハッシュ)を入力してください。(例:#タグ1#タグ2#タグ3)</small>
      </div>
    </div>
    <div class="col-7">
      <div class="form-group ">
        <%= f.label :詳細 %>
        <%= f.text_area :content ,rows:"12" , class:"form-control" %>
      </div>
    </div>
  </div>
</div>
<% end %>