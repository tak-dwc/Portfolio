<% if @request.is_active == "in_review" %>
<div class="container mt-3">
  <div class="row">
    <div class="h4"><%= @member.nickname %>さんとの取引評価</div>
  </div>
  <div class="row mt-3">
    <div class="col-10">
      <%= form_with model:[@request, @rate], local:true do |f| %>
        <div class="form-group ">
          <%= f.label :評価 %>
          <%= f.select :rate_choice,[['Good',0],['Bad',1]], { include_blank: true, selected: 0}, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :コメント %>
          <%= f.text_area :rate_comment ,rows:"5", class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "送信",class:"btn btn-outline-dark btn-bolck" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% else %>
<div></div>
<% end %>

