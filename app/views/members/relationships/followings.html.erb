<h2>フォロー中</h2>
<!--フォロ中が存在するかの確認-->
<% if @members.exists? %>
<table class="table">
<thead>
  <tr>
  <th>image</th>
  <th>name</th>
  <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @members.each do |member| %>
 <tr>
  <td><%= link_to member_path(member) do %>
        <%= attachment_image_tag member,:image,fallback: "noimage.jpg",size:"40x40" %>
      <% end %>  
  </td>
  <td><%= member.nickname %></td>
  <td>フォロー:<%= member.followings.count %></td>
  <td>フォロワー：<%= member.followers.count %></td>
  <td>
   <% unless member == current_member %>
     <%= render 'members/relationships/follow_button',member: member %>

   <% end %>
  </td>
  
</tr>  
  <% end %>
  
</tbody>
</table>

<% else %>
<p>ユーザーはいません</p>

<% end %>
