<% if request.liked_by?(current_member) %>
  <%= link_to request_like_path(request), method: :delete,remote: true do %>
    <i class="fas fa-thumbs-up fa-lg text-danger"></i>
  <% end %>
  <%= request.likes.count %>件
<% else %>
  <%= link_to request_like_path(request), method: :post,remote: true do %>
    <i class="fas fa-thumbs-up fa-lg text-dark"></i>
  <% end %>
  <%= request.likes.count %>件
<% end %>
