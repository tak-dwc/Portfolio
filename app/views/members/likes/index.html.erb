<div class="container mt-3 px-0">
  <% if @requests.present? %>
  <div class="row">
    <div class="h4">お気に入り一覧</div>
  </div>
  <div class="row">
    <% @requests.each do |req| %>
    <!--<%# if req.is_active == "release" && req.member != current_member.id %>-->
    <div class="col-6 mt-3">
      <div class="card h-100" style="width: 20rem;">
        <div class="card-body text-center ">
          <div><%= attachment_image_tag req.member, :image, fallback: "noimage.jpg",size:"35x35" ,class:"rounded-circle border border-dark"%></div>
          <div class="border-bottom"><%= link_to req.member.nickname, member_path(req.member) ,class:"text-dark" %></div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th><%= "タイトル" %></th>
                <th><%= req.title.truncate(10) %></th>
              </tr>
              <tr>
                <th><%= "予定日" %></th>
                <th><%= req.schedule.strftime("%Y年%m月%d日")  %></th>
              </tr>
              <tr>
                <th><%= "場所" %></th>
                <th><%= req.location.truncate(10) %></th>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="card-footer">
          <%= link_to "詳細を見る",request_path(req),class:"btn btn-outline-dark btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row  mt-3 mb-3 justify-content-center"> <%= paginate @requests %></div>
  <% else %>
  <div class="row">
    <p>お気に入りはありません。</p>
  </div>
  <% end %>
</div>


