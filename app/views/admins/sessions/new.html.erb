<div class="container " >
  <div class="row justify-content-center mt-5 mb-5">
    <div class="col-5 card" >
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <h4 class="card-header text-center mt-1">管理者ログイン</h4></br>
      <div class="mt-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス",class:"form-control border-dark" %>
      </div>
      <div class="mt-2">
        <%= f.password_field :password, autocomplete: "current-password",placeholder:"パスワード（６文字以上）",class:"form-control border-dark" %>
      </div>
      <div class="mt-2">
        <%= f.submit "ログイン", class:"btn btn-outline-dark btn-block mt-3 "%>
      </div>
    <% end %>
    </div>
  </div>
</div>