<div class="container mt-5">
  <div class="row">
    <div class="h4">会員一覧</div>
  </div>
  <div class="row">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
        <tbody>
          <tr>
            <td><%= member.id %></td>
            <td><%= link_to member.nickname, admins_member_path(member) ,class:"text-dark" %></td>
            <td nowrap><%= member.email %></td>
            <td>
              <% if member.is_deleted? %>
                <span class="text-danger font-weight-bold">退会</span>
              <% else %>
                <span class="text-dark font-weight-bold">有効</span>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
  </div>
  <div class="row  mt-3 mb-3 justify-content-center"> <%= paginate @members %></div>
</div>