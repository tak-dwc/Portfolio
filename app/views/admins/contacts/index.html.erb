<div class="container">
  <div class="row">
      <h4 class="my-3">問い合わせ一覧</h4>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>タイトル</th>
          <th>受信日</th>
          <th>対応ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.member.nickname %></td>
          <td><%= contact.member.email %></td>
          <td><%= contact.title.truncate(10) %></td>
          <td><%= contact.created_at.strftime("%Y年%m月%d日") %></td>
          <td><%= contact.reply_status %></td>
          <td><%= link_to "返信", edit_admins_contact_path(contact)  %></td
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row  mt-3 mb-3 justify-content-center"> <%= paginate @contacts %></div>
</div>